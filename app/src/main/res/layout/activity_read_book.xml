<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ReadBookActivity">

    <com.github.barteksc.pdfviewer.PDFView
        android:id="@+id/pdfRead"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

    </com.github.barteksc.pdfviewer.PDFView>

    <com.airbnb.lottie.LottieAnimationView
        android:visibility="gone"
        android:id="@+id/prgReadBook"
        android:layout_width="150dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="@+id/pdfRead"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/pdfRead"
        app:layout_constraintTop_toTopOf="@+id/pdfRead"
        app:lottie_rawRes="@raw/prganim">

    </com.airbnb.lottie.LottieAnimationView>
</androidx.constraintlayout.widget.ConstraintLayout>